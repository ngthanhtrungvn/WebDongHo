            <div class="row">
                <div class="col-sm-12">
                    <!-- Authentication card start -->
                    <div class="login-card card-block auth-body mr-auto ml-auto">
                        <form action="~/admin/login/login" method="post" class="md-float-material">
                            <div class="auth-box">
                                <div class="row m-b-20">
                                    <div class="col-md-12">
                                        <h3 class="text-left text-center txt-primary">Register</h3>
                                    </div>
                                </div>
                                <hr />
                                <div class="input-group">
                                    @Html.TextBoxFor(Model => Model.FIRSTNAME, new { @id = "Firstname", @type = "firstname", @class = "form-control", @placeholder = "Firstname" })
                                    <span class="md-line"></span>
                                </div><div class="input-group">
                                    @Html.TextBoxFor(Model => Model.LASTNAME, new { @id = "Lastname", @type = "Lastname", @class = "form-control", @placeholder = "Lastname" })
                                    <span class="md-line"></span>
                                </div>
                                <div class="input-group">
                                    @Html.TextBoxFor(Model => Model.USERNAME, new { @id = "user", @type = "text", @class = "form-control", @placeholder = "UserName" })
                                    <span class="md-line"></span>
                                </div>
                                <div class="input-group">
                                    @Html.TextBoxFor(Model => Model.passwordd, new { @id = "password", @type = "password", @class = "form-control", @placeholder = "Password" })
                                    <span class="md-line"></span>
                                </div>
                                <div class="input-group">
                                    <input id="prepasswordregister" class="form-control" name="prepasswordregister" type="password" placeholder="Repeat password">
                                </div>
                                <div class="input-group">
                                    @Html.TextBoxFor(Model => Model.Email, new { @id = "Email", @type = "Email", @class = "form-control", @placeholder = "Email" })
                                    <span class="md-line"></span>
                                </div>
                                <div class="input-group">
                                    @Html.TextBoxFor(Model => Model.NGAYSINH, new { @id = "BirthDay", @type = "Ngaysinh", @class = "form-control", @placeholder = "BirthDay" })
                                    <span class="md-line"></span>
                                </div>
                                <div class="row m-t-30">
                                    <div class="col-md-12">
                                        <button type="button" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Submit</button>
                                    </div>
                                </div>

                                    <div class="col-lg-2" style="padding: 0px">
                                        <a href="~/Areas/Admin/Views/Login/Login.cshtml">Sign In?</a>
                                    </div>
