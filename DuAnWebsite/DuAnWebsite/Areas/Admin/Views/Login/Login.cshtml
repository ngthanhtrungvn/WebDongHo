    <!-- jquery slimscroll js -->
    <script type="text/javascript" src="~/assets/admin/js/jquery-slimscroll/jquery.slimscroll.js"></script>
    <!-- modernizr js -->
    <script type="text/javascript" src="~/assets/admin/js/modernizr/modernizr.js"></script>
    <script type="text/javascript" src="~/assets/admin/js/modernizr/css-scrollbars.js"></script>
    <script type="text/javascript" src="~/assets/admin/js/common-pages.js"></script>
    <script>
        $(document).ready(function () {
            console.log('remember');
            let check = JSON.parse(window.localStorage.getItem('user'));
            if (check != null) {
                $('#user').val(check.username);
                $('#password').val(check.password);
                $('.ck').attr('checked', true);

            }
            else {
                $('#user').val('');
                $('#password').val('');
                $('.ck').attr('checked', false);
            }
        });
        $(function () {
            function login(user, pass) {
                $.ajax({
                    url: "/Admin/Login/Login",
                    data: JSON.stringify({ "user": user, "pass": pass }),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    type: "POST",
                    success: function (data) {
                        alert(data.message);
                        if (data.status == true)
                            location.href = '/';
                    },
                    error: function (data) {
                        alert('Đăng nhập không thành công');
                    }
                })
            }
            $('.btn').off('click').click(function (e) {
                var user = $('#user').val();
                var pass = $('#password').val();
                if ($('.ck').is(":checked"))
                    window.localStorage.setItem('user',
                        JSON.stringify({
                            "username": user,
                            "password": pass
                        }));
                else
                    window.localStorage.removeItem('user');    
                login(user, pass);
            })
        })
    </script>
</body>
</html>


